<% include ./partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div id="content">

					<h1>SignUp</h1>
					<form action="/register" method="POST" id="pads">
	                   
                        <div class="form-group">
							<lable for="fullname"> FullName </lable>
							<input type= "text" name="fullname" id="fullname" placeholder="Name" class="form-control clr">
						</div>
                        
                        <div class="form-group">
							<lable for="email"> Email </lable>
							<input type= "Email" name="email" id="email" placeholder="Email" class="form-control clr" required>
						</div>
                        
                        <div class="form-group">
							<lable for="phone"> Phone_no. </lable>
							<input type= "text" name="phone" id="phone" placeholder="Phone_no." class="form-control clr">
						</div>
                        
                        <div class="form-group">
							<lable for="DOB"> DOB </lable>
							<input type= "date" name="dob" id="DOB" placeholder="DOB" class="form-control clr">
						</div>
                        
                        <div class="form-group">
                            
                            <lable class="radio-inline">Sex:</lable>
                            
							<lable class="radio-inline">
                                 <input type= "radio" name="sex" value="male">
                                Male  
                            </lable>
                            
                            <lable class="radio-inline" >
                                <input type= "radio" name="sex" value="female">
                                Female
                            </lable>
						</div>
                        
						<div class="form-group">
							<lable for="user"> UserName </lable>
							<input type= "text" name="username" id="user" placeholder="UserName" class="form-control clr" required>
						</div>

						<div class="form-group">
							<lable for="ps"> Password </lable>
							<input type= "password" name="password" id="ps" placeholder="Password" class="form-control clr" pattern="{6,16}" title="Enter an ID consisting of 4-8 hexadecimal digits" requireds>
						</div>

						<div class="form-group">
							<button type="submit" class="btn btn-outline-secondary btn-block">Submit</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
<% include ./partials/footer %>